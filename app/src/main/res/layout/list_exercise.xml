<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/text_black"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/exerciseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Exercise: example"/>

            <TextView
                android:id="@+id/setsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Sets: example"/>

            <TextView
                android:id="@+id/repsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Reps: example"/>

            <TextView
                android:id="@+id/notesTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:text="Notes: This is a note"/>



        </LinearLayout>


    </RelativeLayout>

</LinearLayout>